@model MVC3ET.ViewModels.ProductCreateViewModel

<h2>Create Products</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Products.Name" class="control-label"></label>
        <input asp-for="Products.Name" class="form-control" />
        <span asp-validation-for="Products.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Products.Price" class="control-label"></label>
        <input asp-for="Products.Price" type="number" class="form-control" />
        <span asp-validation-for="Products.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Products.CategoryId" class="control-label"></label>
        <select asp-for="Products.CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-select"></select>
        <span asp-validation-for="Products.CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Back to List</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
