@model MVC3ET.ViewModels.ProductCreateViewModel

<h2>Delete Products</h2>

<form asp-action="Delete" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Products.Id" />

    <div class="form-group">
        <label asp-for="Products.Name" class="control-label"></label>
        <p>@Model.Products.Name</p>
    </div>

    <div class="form-group">
        <label asp-for="Products.Price" class="control-label"></label>
        <p>@Model.Products.Price</p>
    </div>

    <div class="form-group">
        <label asp-for="Products.CategoryId" class="control-label"></label>
        <p>@Model.Products.Category.Name</p>
    </div>

    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
</form>

<a asp-action="Index">Back to List</a>
